/* pages/profile/profile.wxss */
.profile{
  background-color: #e54847;
  height: 400rpx;
  text-align: center;
  position: relative;
  width: 100%;
}
.profile-img{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  display: block;
  overflow: hidden; /* 溢出隐藏 */
  border-radius: 50%;
  left: 50%;
  transform: translate(-50%,60rpx);
}